<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FindIt" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="android:textColorHighlight">@color/orange</item>
    </style>

    <style name="Theme.FindIt" parent="Base.Theme.FindIt" />

    <!-- No Action Bar Theme -->
    <style name="Theme.FindIt.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="android:textColorHighlight">@color/orange</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
