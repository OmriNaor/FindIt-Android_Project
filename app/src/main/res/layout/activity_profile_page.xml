<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- LinearLayout containing all the profile elements -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title for the Profile Page -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <!-- Profile Picture Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- Label for Profile Picture -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Picture:"
                android:textSize="18sp"
                android:paddingEnd="16dp" />

            <!-- Profile Picture ImageView -->
            <ImageView
                android:id="@+id/imgProfilePicID"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/placeholder_profile_picture"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- First Name Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- Label for First Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name:"
                android:textSize="18sp"
                android:paddingEnd="16dp" />

            <!-- EditText for First Name -->
            <EditText
                android:id="@+id/etxtFirstNameID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="John"
                android:textSize="18sp"
                android:inputType="textPersonName" />
        </LinearLayout>

        <!-- Last Name Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- Label for Last Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name:"
                android:textSize="18sp"
                android:paddingEnd="16dp" />

            <!-- EditText for Last Name -->
            <EditText
                android:id="@+id/etxtLastNameID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Doe"
                android:textSize="18sp"
                android:inputType="textPersonName" />
        </LinearLayout>

        <!-- Email Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- Label for Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="18sp"
                android:paddingEnd="16dp" />

            <!-- EditText for Email -->
            <EditText
                android:id="@+id/etxtEmailID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="John@gmail.com"
                android:textSize="18sp"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <!-- Phone Number Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- Label for Phone Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cellphone:"
                android:textSize="18sp"
                android:paddingEnd="16dp" />

            <!-- EditText for Phone Number -->
            <EditText
                android:id="@+id/etxtPhoneNumberID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="+972521111111"
                android:textSize="18sp"
                android:inputType="phone"
                android:maxLength="13" />
        </LinearLayout>

        <!-- Password Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- Label for Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textSize="18sp"
                android:paddingEnd="16dp" />

            <!-- EditText for Password -->
            <EditText
                android:id="@+id/etxtPasswordID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter Password"
                android:textSize="18sp"
                android:inputType="textPassword" />
        </LinearLayout>

        <!-- Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <!-- Cancel Button -->
            <Button
                android:id="@+id/btnCancelRegisterID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:backgroundTint="#D5562E"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <!-- Save Button -->
            <Button
                android:id="@+id/btnSaveRegisterID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="#D5562E"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
