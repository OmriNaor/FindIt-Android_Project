<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView for displaying the title "Settings" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <!-- Switch for enabling or disabling notifications -->
    <Switch
        android:id="@+id/switchNotificationsID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Notifications"/>

    <!-- Switch for enabling or disabling saving pictures in gallery -->
    <Switch
        android:id="@+id/switchSavePicturesID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save taken pictures in gallery"
        android:layout_marginTop="16dp"/>

    <!-- Button for enabling gallery and location permissions -->
    <Button
        android:id="@+id/btnEnablePermissionsID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Gallery/Location Permission"
        android:layout_marginTop="16dp"
        android:background="#D5562E"
        android:textColor="@android:color/white"/>

    <!-- Button for editing the user profile -->
    <Button
        android:id="@+id/btnEditProfileID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:layout_marginTop="16dp"
        android:background="#D5562E"
        android:textColor="@android:color/white"/>

    <!-- Button for clearing the search history -->
    <Button
        android:id="@+id/btnClearHistoryID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Search History"
        android:layout_marginTop="16dp"
        android:background="#D5562E"
        android:textColor="@android:color/white"/>

    <!-- Button for resetting the password -->
    <Button
        android:id="@+id/btnSettingsResetPasswordID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:layout_marginTop="16dp"
        android:background="#D5562E"
        android:textColor="@android:color/white"/>

    <!-- Space to push the return button to the bottom -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Button for returning to the previous screen -->
    <Button
        android:id="@+id/btnSettingsReturnID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:background="#D5562E"
        android:textColor="@android:color/white"/>

</LinearLayout>
